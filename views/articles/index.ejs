<div class="card" style="width:95%;margin:0 auto;margin-top:20px;padding:20px">

<h3>Article Index</h3>

<hr>
<table class="highlight">
  	<thead>
			<th>Title</th>
			<th>Author</th>
			<th>Categories</th>
			<th>Date Created</th>
			<th>Date Updated</th>
			<th></th>
			<th>Edit</th>

		</thead>

<% articles.forEach(function (article, i) { %>
	<tbody id="tableHover">	
		<tr>
			<td><%= article.title %> </td>
			<td> <%= article.author %></td>
			<td> <%= article.categories.join(' & ') %></td>
			<td><%=article.createdAt %></td>
			<td><%= article.updatedAt %></td>
			<td><a class="waves-effect waves z-depth-0" href="/articles/show/<%= article._id %>" role="button">Go to article</a>
			</td>

			<td><a class="btn btn-default z-depth-0" href="/articles/<%= article._id %>/edit" role="button">Edit</a>
			</td>
		</tr>
	
	</tbody>


<% }); %>

</table>

</div>
<div style="margin-left:30px;margin-top:10px;">

 <a class="btn-floating btn-large waves-effect waves" id="add" href="/articles/new">+</a>


<!-- <a class="btn btn-default z-depth-0" href="/articles/new" role="button">Create New Article</a> -->

</div>



