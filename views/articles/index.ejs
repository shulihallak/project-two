<h1>Article Index</h1>
<table class="table table-hover">
  	<thead>
			<th>Title</th>
			<th>Author</th>
			<th>Categories</th>
			<th>Date Created</th>
			<th>Edit</th>

		</thead>

<% articles.forEach(function (article, i) { %>
	<tbody>	
		<tr>
			<td><%= article.title %> </td>
			<td> <%= article._author %></td>
			<td><%=article.time %></td>
			<td> <%= article.categories %></td>
			<td><a class="btn btn-default" class="glyphicon glyphicon-pencil" href="/articles/<%= article._id %>/edit" role="button">Edit</a>
			<!--  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> --></td>
		</tr>
	</tbody>

<% }); %>
</table>

<a class="btn btn-primary" href="/articles/new" role="button">Create Article</a>
