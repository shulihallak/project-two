<form  id="articleNew" action="/articles" method="post">
      <div class="form-group">

     	<label for="articleTitle">Title</label>
		<input 	class="form-control" 
				type="text"
				name="article[title]"
				id="input" 
				placeholder="">		
        </div>
  	<br>
        <div class="form-group">
        <label for="articleAuthor">Author</label>
		<input type="text"
				name="article[_author]"
				class="form-control">		
        </div>
      <br>
        <div class="form-group">
        <label for="content">Content</label>
		<textarea class="form-control" 
					rows="5"
					name="article[content]"></textarea>	
        </div>
      <br>
        <div class="form-group">
        <label for="categories">Categories</label>	
		<input type="text"
				name="article[categories]"
				class="form-control" 
				placeholder="">
		 	
        </div>

        <input type="submit">
  </div>
</form>

